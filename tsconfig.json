{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es6",
    "module": "es2020",
    "lib": ["dom", "es2020"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "**/*.spec.ts"],
  "angularCompilerOptions": {
    "enableIvy": true,
    "strictTemplates": true
  }
}
